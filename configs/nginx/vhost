server {
	listen IPADR:443 ssl http2;
	listen [::]:443 ssl http2;

	server_name MYDOMAIN;
	root	/etc/nginx/html/MYDOMAIN;

	# index.php
	index		index.php index.html index.htm;

	# SSL
	ssl_certificate ssl/MYDOMAIN-ecc.cer;
	ssl_certificate_key ssl/MYDOMAIN-ecc.key;

	# handle .php
	location ~ \.php$ {
		include _php_fastcgi.conf;
	}

	auth_basic_user_file htpasswd/.htpasswd;

	location ~* /\.(?!well-known\/) {
		deny all;
		access_log off;
		log_not_found off;
	}
	location ~* (?:\.(?:bak|conf|dist|fla|in[ci]|log|psd|sh|sql|sw[op])|~)$ {
		deny all;
		access_log off;
		log_not_found off;
	}
	location = /favicon.ico {
		access_log off;
		log_not_found off;
	}
	location = /robots.txt {
		allow all;
		access_log off;
		log_not_found off;
	}
	if (\$http_user_agent ~* "FeedDemon|JikeSpider|Indy Library|Alexa Toolbar|AskTbFXTV|AhrefsBot|CrawlDaddy|CoolpadWebkit|Java|Feedly|UniversalFeedParser|ApacheBench|Microsoft URL Control|Swiftbot|ZmEu|oBot|jaunty|Python-urllib|lightDeckReports Bot|YYSpider|DigExt|YisouSpider|HttpClient|MJ12bot|heritrix|EasouSpider|Ezooms|Scrapy") {
		return 403;
	}

	#Rainloop
	location ^~ /data {
	  deny all;
	}

	include _general.conf;
	include _brotli.conf;
	include _pagespeed.conf;
	#include _wordpress.conf;
	#include _mailman.conf;
	#include _rspamd.conf;
	#include _wordpress.conf;
	#include _nextcloud.conf;
	#include _phpmyadmin.conf;
}

# subdomains redirect
server {
	listen IPADR:443 ssl http2;
	listen [::]:443 ssl http2;

	server_name *.MYDOMAIN;

	# SSL
	ssl_certificate ssl/MYDOMAIN-ecc.cer;
	ssl_certificate_key ssl/MYDOMAIN-ecc.key;

	return 301 https://MYDOMAIN$request_uri;
}

# HTTP redirect
server {
	listen IPADR:80;
	listen [::]:80;

	server_name .MYDOMAIN;

	return 301 https://MYDOMAIN$request_uri;
}
